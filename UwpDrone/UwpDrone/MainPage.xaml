            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Altitude</TextBlock>
                <TextBlock Name="AltValue" Margin="5"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Battery</TextBlock>
                <TextBlock Name="BatValue" Margin="5">0</TextBlock>
                <TextBlock Margin="5">volts</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="Arm" Margin="5" Click="Arm_Click">Arm</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="Takeoff" Margin="5" Click="Takeoff_Click">Takeoff</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="HoldAt15" Margin="5" Click="HoldAt15_Click">Hold at 15cm</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="Land" Margin="5" Click="Land_Click">Land</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Proxy:</TextBlock>
                <TextBox Name="ProxyIp" Margin="5" PlaceholderText="proxy ip" Width="200"></TextBox>
                <Button Margin="5" Click="Button_Click">Set</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Front Distance:</TextBlock>
                <TextBlock Name="FrontDistanceValue" Margin="5">front</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Back Distance:</TextBlock>
                <TextBlock Name="BackDistanceValue" Margin="5">back</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Left Distance:</TextBlock>
                <TextBlock Name="LeftDistanceValue" Margin="5">left</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Right Distance:</TextBlock>
                <TextBlock Name="RightDistanceValue" Margin="5">right</TextBlock>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
